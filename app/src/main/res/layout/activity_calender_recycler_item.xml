<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/cardV"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"


        >

        <RelativeLayout
            android:id="@+id/rellayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:visibility="visible"

            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/reminderDetails"
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="15dp"
                android:text="Today"
                android:textColor="@color/dark_green"
                android:textSize="20dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/status"
                style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="19dp"
                android:background="#ABFACC"
                android:text="todo"
                android:layout_alignRight="@+id/reminderDetails"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <ImageButton
                android:id="@+id/arrowBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/status"
                android:background="@drawable/arrowdown"
                android:backgroundTint="@color/black" />


            <RelativeLayout
                android:id="@+id/expandableView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/arrowBtn"
                android:layout_marginTop="10dp"

                android:visibility="visible">

                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:id="@+id/view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:elevation="12dp"
                    >

                    <ImageView
                        android:id="@+id/plantImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="#FFFFFF"
                        android:scaleType="centerCrop"
                        android:src="@drawable/flower_icon_green" />
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                <TextView
                    android:id="@+id/plantName"
                    style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="70dp"
                    android:text="@string/plant_name"
                    android:textColor="@color/dark_green"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/waterdrop2"
                    android:layout_below="@+id/plantName">

                </ImageView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/water"
                    style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/plantName"
                    android:paddingLeft="30dp"
                    android:text="Water"
                    android:textColor="@color/dark_green"
                    android:textSize="10dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/waterplant"
                    style="@style/MaterialAlertDialog.MaterialComponents.Title.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="-20dp"
                    android:layout_below="@+id/water"
                    android:paddingLeft="10dp"
                    android:text="In 4 days/Every 4 days"
                    android:textColor="@color/dark_green"
                    android:textSize="10dp" />

                <ImageButton
                    android:id="@+id/watercan"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="80dp"
                    android:backgroundTint="#D50000"
                    android:layout_toRightOf="@+id/waterplant"
                    android:background="@drawable/wateringcan"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

